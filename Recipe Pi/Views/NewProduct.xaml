<Window x:Class="Recipe_Pi.NewProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recipe_Pi"
        mc:Ignorable="d"
        Title="NewProduct" Height="72" Width="648" WindowStyle="None"  ResizeMode="NoResize">
    <Grid Background="#FF2C2F33">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Productnaam"  Margin="10,0,0,0" FontFamily="Segoe Print" HorizontalAlignment="Left" Height="25"  FontSize="15" Foreground="White"/>
        <TextBox x:Name="tbProduct" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
        <Button x:Name="btnSend" Content="Toevoegen" HorizontalAlignment="Left" Click="btnSend_Click" VerticalAlignment="Center" Grid.Column="2" Width="100" Height="27" Background="#FF283E91" BorderBrush="#FF1A2446"/>
    </Grid>
</Window>
